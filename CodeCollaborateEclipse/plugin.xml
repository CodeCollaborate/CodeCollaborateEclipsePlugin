<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.views">
      <category
            name="CodeCollaborate"
            id="CodeCollaborateEclipse">
      </category>
      <view
            name="CodeCollaborate"
            icon="icons/sample.gif"
            category="CodeCollaborate"
            class="codecollaborateeclipse.CCControlPanel"
            id="CodeCollaborateEclipse.CCControlPanel">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="CodeCollaborateEclipse.CCControlPanel">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="CodeCollaborateEclipse.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="codecollaborateeclipse.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="codecollaborateeclipse.actions.SampleAction">
         </action>
      </actionSet>
   </extension>

</plugin>
