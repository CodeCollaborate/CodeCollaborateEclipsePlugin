<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.views">
      <category
            name="CodeCollaborate"
            id="CodeCollaborateEclipse">
      </category>
      <view
            name="CodeCollaborate"
            icon="icons/sample.gif"
            category="CodeCollaborate"
            class="codecollaborateeclipse.ui.ControlPanel"
            id="CodeCollaborateEclipse.ControlPanel">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="CodeCollaborateEclipse.ControlPanel">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="codecollaborateeclipse.preferences.Preferences"
            id="codecollaborateeclipse.preferences.Preferences"
            name="CodeCollaborate">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="codecollaborateeclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.core.resources.builders">
   </extension>

</plugin>
